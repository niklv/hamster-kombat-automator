{
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "sourceMap": true,
    "typeRoots": ["./src/@types"]
  },
  "include": ["src/**/*.ts"]
}
